# Flask Dashboard Configuration Template
# Copy this file to .env and configure with your actual values

# ================================
# Database Configuration
# ================================
# PostgreSQL database connection details
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dbsagra
DB_USER=sagra
DB_PASSWORD=sagra

# ================================
# Flask Server Configuration
# ================================
# Server host (use 0.0.0.0 to allow external connections)
SERVER_HOST=127.0.0.1

# Server port
SERVER_PORT=5001

# Enable debug mode (true/false)
# WARNING: Never enable debug mode in production!
DEBUG_MODE=false

# ================================
# Static Files Configuration
# ================================
# Path to the frontend build folder (relative to app.py)
STATIC_FOLDER=../frontend/dist

# URL path prefix for static files
STATIC_URL_PATH=/

# ================================
# CORS Configuration
# ================================
# Enable Cross-Origin Resource Sharing (true/false)
# Useful for development when frontend and backend run on different ports
ENABLE_CORS=true
